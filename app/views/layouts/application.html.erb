<!DOCTYPE html>
<html>
  <head>
  <%= favicon_link_tag('favicon.ico') %>
    <title>original_app1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header clearfix">
    <img src="<%= asset_path("スクリーンショット 2024-07-05 14.13.17.png")%>"height=50px width=60px class="logo_image">
      
      <nav>
      <% unless user_signed_in? %>
        <ul class="top_menu clearfix">
          <li><%= link_to "新規登録", new_user_registration_path, class:"li_color" %><br></li>
          <li><%= link_to "ログイン", new_user_session_path, class:"li_color" %><br></li>
          <li><%= link_to "ゲストログイン", homes_guest_sign_in_path, class:"li_color",method: :post %><br></li>
          <li><%= link_to "管理者用ゲストログイン", homes_admins_guest_sign_in_path, class:"li_color",method: :post%><br></li>
        </ul>
      <% end %>
      <% if user_signed_in? %>
        <ul class="sign_in_top_menu clearfix">
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"li_color" %><br></li>
          <li><%= link_to "ユーザーTOP", user_path(current_user), class:"li_color" %></li>
        <% if current_user.admin? %>
          <li><%= link_to "管理者ページ", rails_admin_path, class:"li_color" %><br></li>
        <% end %>
        </ul>
      <% end %>
      </nav>
    </header>

    <img src="<%= asset_path("wallpaper-music-14 2.png")%>" width=100% height=120px>
    <div class="wrapper">
    <% unless controller.controller_name == "homes" %>
      <aside>
        <div class="shozoku_user">
          <%= link_to '所属チーム', teams_path(@user) %>
        </div>    
        <div class="sakusei_user">
          <%= link_to 'チーム作成', new_team_path %>
        </div>
        <div class="idea_user">
          <%= link_to 'アイデア募集投稿一覧', comments_path %>
        </div>
      </aside>
    <% end %>

    <div class="yield_space">
      <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>  
    <div class="push"></div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    
    <footer class="footer">
      <p>idea_studio.</p>
    </footer>
  </body>
</html>

