<h3>検索結果</h3>
<%= link_to 'Back', :back %>
  <tbody>
    <% @results.each do |comment| %>
      <tr>
        <% if comment.publiccomment  %>
          <br>
          <td><%= comment.content %></td><br>
          <td><%= audio_tag comment.audio_url, :controls => true if comment.audio? %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
