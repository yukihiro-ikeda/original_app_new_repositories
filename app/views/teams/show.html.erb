<h2>チームページ</h2>
<p>
<strong>チーム名:</strong>
<%= @team.name %>
</p>
<p>
<strong>リーダー名:</strong>
<%= @team.owner_id %>
</p>


<%= form_with(model: Assign.new, url:team_assigns_path(@team), local: true) do |f| %>
  <div class="input-group">
    <%= f.email_field :email, placeholder: "emailアドレス" %>
    <div class="input-group-append">
      <%= f.submit "メンバー招待", class:"btn btn-dark" %>
    </div>
  </div>
<% end %>

<% @assign.each do |assign| %>
 
    <tr>
      <td>メンバーemail:<%= assign.user.email %></td><br>
    </tr>
  
<% end %>
