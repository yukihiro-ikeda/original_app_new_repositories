<h1>ソングワークスペース</h1>
<p>

<%= @song.title %>
</p>

<% @comments.each do |comment| %>
  <% if comment.id.present? %>
    <tr>
      <td>コメント:<%= comment.content %></td>
      <div class="audio">
      <td><%= audio_tag comment.audio_url, :controls => true if comment.audio? %></td>
      </div>
    </tr>
  <% end %>
<% end %>

<h3>アイデア投稿</h3>
<%= form_with(model: [@team, @song, Comment.new], url: team_song_comments_path(song_id: @song, team_id: @team), local:true) do |form| %>

  <div class="comment_content">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :audio %>
    <%= form.file_field :audio %>
  </div>
  <%= form.hidden_field :comment_id, :value => params[:comment_id] %>
  <%= form.submit '投稿する' %>

<% end %>

